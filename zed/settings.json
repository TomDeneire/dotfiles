{
  "theme": "Gruvbox Dark Hard",
  "features": {
    // Which inline completion provider to use.
    "inline_completion_provider": "copilot"
  },
  "auto_install_extensions": {
    "html": true,
    "xml": true
  },
  "base_keymap": "VSCode",
  "buffer_font_family": "FiraCode Nerd Font",
  "buffer_font_fallbacks": ["Zed Plex Mono"],
  "buffer_font_size": 30,
  "buffer_font_weight": 450,
  "ui_font_family": "FiraCode Nerd Font",
  "ui_font_fallbacks": ["Zed Plex Mono"],
  "ui_font_weight": 450,
  "ui_font_size": 30,
  "vim_mode": true,
  "cursor_blink": false,
  "current_line_highlight": "all",
  "show_completions_on_input": true,
  "use_system_path_prompts": false,
  "show_completion_documentation": true,
  "unnecessary_code_fade": 0.5,
  "show_wrap_guides": true,
  "wrap_guides": [80],
  "use_on_type_format": true,
  "use_autoclose": false,
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": true,
    "regex": false
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "relative_line_numbers": true,
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": false
  },
  "outline_panel": {
    "button": false,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true
  },
  "collaboration_panel": {
    "button": false,
    "dock": "left",
    "default_width": 240
  },
  "chat_panel": {
    "button": false,
    "dock": "right",
    "default_width": 240
  },
  "notification_panel": {
    "button": true,
    "dock": "right",
    "default_width": 380
  },
  "enable_language_server": true,
  "language_servers": ["gopls", "pyright", "LuaLS"],
  "autosave": "off",
  "tabs": {
    "git_status": false,
    "file_icons": true,
    "close_position": "right"
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "formatter": "auto",
  "soft_wrap": "preferred_line_length",
  "preferred_line_length": 80,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },
  "terminal": {
    "shell": { "program": "/bin/bash" },
    "dock": "bottom",
    "default_width": 640,
    "default_height": 520,
    "working_directory": "current_project_directory",
    "blinking": "terminal_controlled",
    "alternate_scroll": "off",
    "option_as_meta": false,
    "copy_on_select": true,
    "button": true,
    "env": {},
    "font_size": 30,
    "font_weight": 450,
    "font_family": "FiraCode Nerd Font",
    "line_height": "comfortable",
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    },
    "toolbar": {
      "title": true
    }
  },
  "languages": {
    "Go": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "Lua": {
      "language_servers": ["lua-language-server", "lua-ls"]
    },
    "Rust": {
      "language_servers": ["rust-analyzer"]
    },
    "ReStructuredText": {
      "language_servers": ["swyddfa/esbonio", "esbonio"],
      "prettier": {
        "allowed": true
      }
    }
  },
  "lsp": {
    "rust-analyzer": {}
  },
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": false,
    "use_smartcase_find": false
  }
}
